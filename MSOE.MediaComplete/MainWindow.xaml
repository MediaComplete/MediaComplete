<Window x:Class="MSOE.MediaComplete.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Complete">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TreeView Grid.Column="0"/>
            <TreeView Grid.Column="1"/>
            <TreeView Grid.Column="2"/>
        </Grid>
        <StackPanel Grid.Row="1">
            <Slider/>
            <StackPanel Height="64" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Previous" MinWidth="75" Click="Button_Click"/>
                <Button Content="Play" MinWidth="75"/>
                <Button Content="Skip" MinWidth="75"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
