                        <Rectangle Height="22" Width="22" Style="{DynamicResource ToolbarRectangleStyle}"/>
                        <Polygon Points="4,4 4,8 15,8 15,6 6,6 6,4" Fill="{DynamicResource ToolbarButtonPrimaryBrush}"/>
