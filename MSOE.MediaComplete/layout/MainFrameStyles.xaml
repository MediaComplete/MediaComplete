                        <Polygon Points="5,4 4,5 7,8 6,9 9,9 9,6 8,7 " Fill="{DynamicResource ToolbarButtonPrimaryBrush}"/>
                        <Polygon Points="17,4 18,5 15,8 16,9 13,9 13,6 14,7 " Fill="{DynamicResource ToolbarButtonPrimaryBrush}"/>
                    </Grid>
