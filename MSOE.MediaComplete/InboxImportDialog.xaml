<Window x:Class="MSOE.MediaComplete.InboxImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inbox Import"
        Height="150"
        Width="300"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Icon="Resources/logo_small.ico">
    <Grid Style="{DynamicResource GridStyle}">
        <TextBlock Margin="10"
            Name="MessageTextBlock"
            Text="This is the test text."
            Style="{DynamicResource TextBlockStyle}"/>
        <CheckBox Name="StopShowingCheckBox" Margin="10,50,0,0" Content="Don't show this message again." Style="{DynamicResource CheckBoxStyle}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Name="OkButton" Click="okButton_Click" IsDefault="True" MinWidth="65" Margin="0,0,0,10">Yes</Button>
            <Button Name="CancelButton" Click="CancelButton_OnClick" IsCancel="True"  MinWidth="65" Margin="10,0,10,10">No</Button>
        </StackPanel>
    </Grid>
</Window>
