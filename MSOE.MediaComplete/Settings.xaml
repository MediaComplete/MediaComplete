<Window x:Class="MSOE.MediaComplete.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="372" Width="482"
        ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <TabControl HorizontalAlignment="Left" Height="342" VerticalAlignment="Top" Width="472">
            <TabItem Header="TabItem">
                <StackPanel>
                    <Label Content="Select Location of Home Directory:"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="txtboxSelectedFolder" Width="390" AcceptsReturn="True"/>
                        <Button x:Name="btnSelectFolder" Margin="8, 0, 0, 0" Content="Select File" Click="btnSelectFolder_Click"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="TabItem">

                <Grid Background="#FFE5E5E5" Margin="0,0,0,0"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
